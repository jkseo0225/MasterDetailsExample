@model IEnumerable<DAL.Models.Project>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectClient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectEvent)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectClient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectEvent)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">수정</a> |
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">상세보기</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">삭제</a>
            </td>
        </tr>
}
    </tbody>
</table>
