            <div class="form-group">
                <label asp-for="TargetBigGen" class="control-label"></label>
                <input asp-for="TargetBigGen" class="form-control" />
                <span asp-validation-for="TargetBigGen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TargetBigSun" class="control-label"></label>
                <input asp-for="TargetBigSun" class="form-control" />
                <span asp-validation-for="TargetBigSun" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductGenSmall" class="control-label"></label>
                <input asp-for="ProductGenSmall" class="form-control" />
                <span asp-validation-for="ProductGenSmall" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductGenBig" class="control-label"></label>
                <input asp-for="ProductGenBig" class="form-control" />
